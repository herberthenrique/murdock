// ==================================================
// Types
//
// 1. Links
// 2. Headings
// 3. Paragraph
// 4. Bold
// 5. Italic
// 6. Small
// 7. Blockquote
// ==================================================

//
// 1. Links
// --------------------------------------------------

a
  color inherit
  text-decoration none

  p &
    color $brand-primary

  p &:hover
    text-decoration underline


//
// 2. Headings
// --------------------------------------------------

h1, h2, h3, h4, h5, h6
  font-weight normal
  margin 0


//
// 3. Paragraph
// --------------------------------------------------

p
  &:not(:last-child)
    margin-bottom $space


//
// 4. Bold
// --------------------------------------------------

b
strong
  font-weight(bold)


//
// 5. Italic
// --------------------------------------------------

i
em
  font-style italic


//
// 6. Small
// --------------------------------------------------

.small
small
  font-size .8em


//
// 7. Blockquote
// --------------------------------------------------

blockquote
  margin ($space-lg + $space) 0 ($space-lg + $space)
  position relative

  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0

  cite
    $font(h2, bold)
    display block
    margin-bottom $space-sm
    position relative

    &:before
    &:after
      font-size 4.5rem
      margin-top -10px
      position absolute

    &:before
      content '“'
      left -($space)

    &:after
      content '”'

  p
    margin-top $space-sm
    $font(p2, light)

    &:before
        content '– '